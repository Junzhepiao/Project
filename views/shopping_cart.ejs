<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <style media="screen">
      .card{
        padding-bottom:30px;
      }
      .banner{
        text-align: center;
        border-bottom: 1px solid black;
        position: relative;
        height: 80px;
        background-color: #EA601D;
        margin-top:20px;
        margin-bottom:30px;
      }
      .brand {
        position: relative;
        top: 10px;
        color: white;
        font-size: 2em;
      }

      .card{
        margin:20px;
      }

      .welcome {
        text-align: right;
      }

      .pricing{
        display:flex;
        flex: right;
      }

      a {
        color:black;
        font-size:18px;
        margin:10px;
      }


      .containers{
        margin-top:10px;
        text-align:center;
      }
      #check_out{
          text-align:center;
      }
      .pricing{
        text-align:center;
    }
      h3 {
          text-align:center;
          align-content:center;
      }

    </style>

  </head>

  <body>
   <div class="banner">
     <i class="fas fa-shopping-cart fa-md"></i>
     <span class="brand">Shopright</span>
   </div>
   <span><a  class ="backs" href="/protected">back</a></span>
    <div>
       <h2 class= "welcome"><%= users.name%>'s shopping cart</h2>
    </div>
  <div class="containers">
      <% for(let i = 0; i<cart.length; i++){ %>
          <div class="card">
          <h3><%= cart[i].item_name %></h3>
          <h3 >$<%= cart[i].price %></h3>

          <div><img src="<%=cart[i].img_url%>" alt='image of products' height= "275" width="275"></div>
          <div><a class="btn btn-secondary btn-sm btn-block" href="/delete/item/from/cart/<%= cart[i].id %>"> Delete from Cart</a></div>
          <hr>
          </div>
      <% } %>
</div>

<div class="container" id="TotalPrice">
<%  let TotalPrice = 0; %>
<% for(let i = 0; i<cart.length; i++){ %>
    <% let TolOfEach = (cart[i].price)*(cart[i].quantity) %>
    <% TotalPrice += TolOfEach %>
<% } %>
<h3>Total Price: $<%= TotalPrice %></h3>
</div>

<div id="check_out">
<form action='/check_out/<%= users.id%>' method="POST">
    <button class="btn btn-secondary btn-sm btn-block" ><i class="fas fa-cart-plus"></i>Check Out</button>
</form>
</div>

  </body>
</html>
