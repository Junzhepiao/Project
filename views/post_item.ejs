<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <style media="screen">
    .banner{
      text-align: center;
      border-bottom: 1px solid black;
      position: relative;
      height: 80px;
      background-color: #EA601D;
      margin-bottom:20px;
    }
    .brand {
      position: relative;
      top: 10px;
      color: white;
      font-size: 2em;
    }
    .info {
        text-align: center;
        color: white;
        background-color: silver;
        border-top: 1px solid black;
        line-height: 30px;
        margin:0px;
        padding: 5px 0;
      }
      .card{
        text-align:center;
      }
      .post_item{
        padding-left:34%;
        margin-bottom:5%;
      }
      .backs{
        text-align:left;
        padding-left: 20px;
        color:black;
      }
      .your_items{
        padding-left:45%;
        margin-bottom:2%;
      }
      .btn{
        margin:1%;
      }
    </style>

  </head>

  <body>
  <div class="banner">
    <i class="fas fa-shopping-cart fa-md"></i>
    <span class="brand">Shopright</span>  
    </div>
</div>
<span><a  class ="backs" href="/protected">Main page</a></span>

    <div class="post_item">
    <h4 class ="reg">Post an item</h4>
<form action="/postItem/<%=users.id%>" method="POST">
    <div class="form-row">
      <div class="form-group col-md-3 reg">
        <input type="text" class="form-control" name="item_name" placeholder="Name of Item">
      </div>
      <div class="form-group col-md-3 reg">
        <input type="text" class="form-control" name="img_url" placeholder="Image URL">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3 reg">
          <input type="text" class="form-control" name="description" placeholder="Description">
    </div>
    <div class="form-group col-md-3 reg">
        <input type="text" class="form-control"  name="date"  placeholder="Date">
    </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3 reg">
        <input type="text" class="form-control" name="keyword" placeholder="Keyword">
      </div>
      <div class="form-group col-md-3">
        <input type="integer" class="form-control" name="price" placeholder="Price">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>



    <div class="container">
    <div class="your_items"><h4>Your Items</h4></div>
    <% for(let i = 0; i<items.length; i++){ %>
        <div class="card">
        <h3><%= items[i].item_name %></h3>
        <h3>$ <%= items[i].price %></h3>
        <div><img src="<%=items[i].img_url%>" alt='image of products' height= "275" width="275"></div>
        <div><a class="btn btn-secondary btn-md " href='/item/details/<%= items[i].id %>'>Edit / Delete</a></div>
        </div>
    <% } %>
</div>


  </body>
</html>